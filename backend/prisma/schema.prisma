generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Person {
  id             String           @id @default(uuid())
  name           String
  degree         String
  birthYear      Int
  email          String
  phone          Int
  insuraceNumber Int
  insuranceId    String
  insurance      InsuranceCompany @relation(fields: [insuranceId], references: [id])
  addressId      String           @unique
  address        Address          @relation(fields: [addressId], references: [id])
  password       String
}

model InsuranceCompany {
  id      String   @id @default(uuid())
  number  Int
  name    String
  persons Person[]
}

model Address {
  id         String  @id @default(uuid())
  country    String
  City       String
  PostalCode Int
  street     String
  Person     Person?
}

model Reservation {
  id             String   @id @default(uuid())
  personId      String
  person         Person
  doctorId      String
  from           DateTime
  personComment String
  doctorComment String
  created        DateTime
}
