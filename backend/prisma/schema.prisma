generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Person {
    id              String @id @default(uuid())
    name            String
    degree          String
    birthYear      number
    email           String
    phone           number
    insuraceNumber number
    insuranceId    String
    insurance       InsuranceCopmany @relation(fields: [insurance_id], references: [id])
    addressId      String
    address         Address[]
    password        String
}

model InsuranceCompany {
    id      String @id @default(uuid())
    number  number
    name    String
    persons Person[]
}

model Address {
    id              String @id @default(uuid())
    country         String
    City            String
    PostalCode      Number
    street          String
    persons         Person[]
}
